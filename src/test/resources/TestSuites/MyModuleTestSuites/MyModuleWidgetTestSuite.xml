<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="My Modules Test Suite" verbose="1">
    <!--<parameter name="generalPropertiesFilePath" value="config/general/qa.sample.properties"/>-->
    <listeners>
        <listener class-name="com.monportailrh.core.TestListener"/>
    </listeners>
    <test name="My Modules Widget Visibility Test For Non Admin">
        <classes>
            <class name="com.monportailrh.myModuleTest.MyModuleWidgetTest">
                <methods>
                    <include name="checkVisibilityOfMyModulesWidgetForNonAdmin"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="My Modules Widget Visibility Test For Admin">
        <classes>
            <class name="com.monportailrh.myModuleTest.MyModuleWidgetTest">
                <methods>
                    <include name="checkVisibilityOfMyModulesWidgetForAdmin"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Modules Visibility Test">
        <classes>
            <class name="com.monportailrh.myModuleTest.MyModuleWidgetTest">
                <methods>
                    <include name="checkDisplayedModules"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Modules Redirection Test">
        <classes>
            <class name="com.monportailrh.myModuleTest.MyModuleWidgetTest">
                <methods>
                    <include name="checkModuleRedirection"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>